@model IEnumerable<Crud_Simples.Models.Usuario>
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">
    <div>
        <h3>Usuarios Cadastrados</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Usuario/Add"> Cadastrar Usuario</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
           

            <table class="table ">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Sobrenome</th>
                        <th>Idade</th>
                        <th>Email</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody scope="row">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Sobrenome</td>
                            <td>@item.Idade</td>
                            <td>@item.Email</td>
                           
                            <td>
                                <a class="btn btn-success" href="/Usuario/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Tem certeza que deseja excluir o usuario: @item.Nome @item.Sobrenome?')" href="/Usuario/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

