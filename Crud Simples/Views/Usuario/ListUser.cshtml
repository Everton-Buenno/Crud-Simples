@model IEnumerable<Crud_Simples.Models.Usuario>
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5 vw-100">
    <div>
        <h3>Usuarios Cadastrados</h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Usuario/Add"> Cadastrar Usuario</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 w-100">
           

            <table class="table mt-2">
                <thead class="table-dark">
                    <tr>
                        <th scop="col">Id</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Sobrenome</th>
                        <th scope="col">Idade</th>
                        <th scope="col">Email</th>
                        <th scope="col">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Nome</td>
                            <td>@item.Sobrenome</td>
                            <td>@item.Idade</td>
                            <td>@item.Email</td>
                           
                            <td>
                                <a class="btn btn-dark" href="/Usuario/Update?id=@item.Id">Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Tem certeza que deseja excluir o usuario: @item.Nome @item.Sobrenome?')" href="/Usuario/Delete?id=@item.Id">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

